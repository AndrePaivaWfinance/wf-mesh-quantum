{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2022",
        "outDir": "dist",
        "rootDir": ".",
        "sourceMap": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": true,
        "declarationMap": true,
        "baseUrl": ".",
        "paths": {
            "@shared/*": [
                "./shared/*"
            ]
        },
        "moduleResolution": "node"
    },
    "include": [
        "src/**/*",
        "shared/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}